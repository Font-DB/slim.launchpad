{% extends 'templates/app.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}

<div class="card">
    <h5 class="card-header">{{ title }}</h5>

    <div class="card-body">
        <div class="list-group">
            {% for user in users %}
                <a href="{{ path_for('user.single', {'id': user.id}) }}"
                   class="list-group-item list-group-item-action waves-effect">{{ user.first_name }} {{ user.last_name }}</a>
            {% endfor %}
        </div>
    </div>

    <div class="card-footer">
        <a href="{{ path_for('user.new') }}" class="btn btn-outline-success">Add</a>
    </div>
</div>

{% endblock %}
