{% extends 'templates/app.twig' %}

{% block title %} {{ title }}{% endblock %}

{% block content %}

    <form method="#"
          action="#"
          id="user_form"
          name="user_form"
          class="needs-validation"
          novalidate="">

        <div class="card">
            <h5 class="card-header">{{ title }}</h5>

            <div class="card-body">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="first_name" class="sr-only">First name</label>
                        <input type="text"
                               class="form-control"
                               id="first_name"
                               name="first_name"
                               placeholder="First Name"
                               value="{{ user.first_name }}"
                               required
                               style="
                           background-size: 16px 18px;
                           background: no-repeat scroll 98% 50%;
                           cursor: auto;"
                        >
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="last_name" class="sr-only">Last Name</label>
                        <input type="text"
                               id="last_name"
                               name="last_name"
                               placeholder="Last Name"
                               value="{{ user.last_name }}"
                               required
                               class="form-control"
                        >
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email" class="sr-only">eMail</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@</span>
                        </div>
                        <input type="text"
                               id="email"
                               name="email"
                               placeholder="you@domain.com"
                               value="{{ user.email }}"
                               required
                               class="form-control"
                        >
                        <div class="invalid-feedback" style="width: 100%;">
                            Your email is required.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password" class="sr-only">Password</label>
                    <div class="input-group">
                        <input type="password"
                               id="password"
                               name="password"
                               placeholder="Password"
                               value=""
                               class="form-control"
                        >
                        <div class="invalid-feedback" style="width: 100%;">
                            Your Password is required.
                        </div>
                    </div>
                </div>
            </div>

            {% if status == 'update' %}
            <div class="card-footer">
                <div class="row">
                    <div class="col text-center">
                        <input type="submit"
                               id="submit-update"
                               name="submit-update"
                               value="Update"
                               class="btn btn-outline-success"
                               method="put"
                               url="{{ path_for('user.put', {'id': user.id}) }}"
                        />
                    </div>

                    <div class="col text-center">
                        <input type="submit"
                               id="submit-delete"
                               name="submit-delete"
                               value="Remove"
                               class="btn btn-outline-danger"
                               method="delete"
                               url="{{ path_for('user.delete', {'id': user.id}) }}"
                        />
                    </div>
                </div>
            </div>
            {%  else %}
                <div class="card-footer">
                    <div class="col text-center">
                        <input type="submit"
                               id="submit-add"
                               name="submit-add"
                               value="Add"
                               class="btn btn-outline-success"
                               method="post"
                               url="{{ path_for('user.post') }}"
                        />
                    </div>
                </div>
            {%  endif %}

        </div>

    </form>

{% endblock %}
